name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Fully qualified name for the artifact
        type: str

      output_artifact:
        description: Name for the W&B artifact that will be created
        type: str

      output_type:
        description: Type of the artifact to create
        type: str

      output_description:
        description: Description for the output artifact
        type: str

      min_price:
        description: Minimum price for dropping outliers
        type: float

      max_price:
        description: Maximum price for dropping outliers
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact} \
                        --output_artifact {output_artifact} \
                        --output_type {output_type} \
                        --output_description {output_description} \
                         --min_price {min_price} \
                         --max_price {max_price}
